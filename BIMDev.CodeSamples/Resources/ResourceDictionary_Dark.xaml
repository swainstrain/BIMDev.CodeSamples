<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ResourceDictionary.MergedDictionaries>

        <materialDesign:CustomColorTheme BaseTheme="Dark"
                                         PrimaryColor="RoyalBlue"
                                         SecondaryColor="Lime" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Chip.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.PopupBox.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ValidationErrorTemplate.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.DialogHost.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ComboBox.xaml" />

        <ResourceDictionary>
            <!-- datagrid -->
            <SolidColorBrush x:Key="MaterialDesignPaper"
                             Color="#212121" />
            <SolidColorBrush x:Key="TextColor"
                             Color="White" />
            <SolidColorBrush x:Key="WhiteDesignPaper"
                             Color="BlueViolet" />
            <SolidColorBrush x:Key="WarningDesignPaper"
                             Color="BlueViolet" />

            <!-- light -->
            <SolidColorBrush x:Key="PrimaryHueLightBrush"
                             Color="LimeGreen" />
            <SolidColorBrush x:Key="PrimaryHueLightForegroundBrush"
                             Color="ForestGreen" />

            <!-- mid -->
            <SolidColorBrush x:Key="PrimaryHueMidBrush"
                             Color="RoyalBlue" />
            <SolidColorBrush x:Key="PrimaryHueMidForegroundBrush"
                             Color="White" />

            <!-- dark-->
            <SolidColorBrush x:Key="PrimaryHueDarkBrush"
                             Color="White" />
            <SolidColorBrush x:Key="PrimaryHueDarkForegroundBrush"
                             Color="LimeGreen" />

            <!-- accent -->
            <SolidColorBrush x:Key="SecondaryHueLightBrush"
                             Color="LimeGreen" />
            <SolidColorBrush x:Key="SecondaryHueLightForegroundBrush"
                             Color="Black" />

            <SolidColorBrush x:Key="SecondaryHueMidBrush"
                             Color="White" />
            <SolidColorBrush x:Key="SecondaryHueMidForegroundBrush"
                             Color="White" />

            <!-- Progress Bar -->
            <SolidColorBrush x:Key="PrimaryBrushProgressBar"
                             Color="#EF5350" />

            <SolidColorBrush x:Key="TreeViewMouseHover"
                             Color="#757575" />
            <SolidColorBrush x:Key="TreeViewSelected"
                             Color="#616161" />

            <Style x:Key="RowStyle"
                   BasedOn="{StaticResource MaterialDesignDataGridRow}"
                   TargetType="{x:Type DataGridRow}">

                <Style.Triggers>
                    <Trigger Property="IsSelected"
                             Value="True">
                        <Setter Property="Background"
                                Value="#616161" />
                    </Trigger>

                    <DataTrigger Binding="{Binding IsTemplate}"
                                 Value="True">
                        <Setter Property="FontWeight"
                                Value="Bold" />
                    </DataTrigger>

                    <DataTrigger Binding="{Binding IsApplied}"
                                 Value="True">
                        <Setter Property="Foreground"
                                Value="Green" />
                    </DataTrigger>

                    <DataTrigger Binding="{Binding Status}"
                                 Value="1">
                        <Setter Property="Background"
                                Value="LightBlue" />
                        <Setter Property="Foreground"
                                Value="Black" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Status}"
                                 Value="2">
                        <Setter Property="Background"
                                Value="LightYellow" />
                        <Setter Property="Foreground"
                                Value="Black" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Status}"
                                 Value="3">
                        <Setter Property="Background"
                                Value="LightGreen" />
                        <Setter Property="Foreground"
                                Value="Black" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Status}"
                                 Value="4">
                        <Setter Property="Background"
                                Value="#616161" />
                        <Setter Property="Foreground"
                                Value="#212121" />
                    </DataTrigger>
                    <DataTrigger Binding="{Binding Status}"
                                 Value="5">
                        <Setter Property="Background"
                                Value="IndianRed" />
                        <Setter Property="Foreground"
                                Value="Black" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

        </ResourceDictionary>
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>